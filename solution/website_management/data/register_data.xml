<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <template id="test_homepage">
        <t t-call="website.layout">
            <div class="register_form1">
                <section class="title_register">
                    <div class="container pb-3">
                        <h2 style="color: #60B3E4;">My Account Registration</h2>
                    </div>
                </section>

                <section class="register_page p-5" style="background-color: #F2F2F2;">
                   <form action="/create_record" method="post">
                    <div class="container">
                        <span class="mb-5" style="margin:14px; font-size:1rem !important;">Use the form below to create
                            a My
                            Account at Rapid Die Cut to access Quotes, place Orders, and view Order history.
                        </span>

                        <div class="row mt-4">
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                <h2 class="mb-3">Login Details</h2>
                            </div>
                            <div class="col-xl-1 col-lg-1 col-md-1">
                            </div>
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                <h2 class="mb-3">Contact Details</h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-4 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                <p class="mt-3">Email Address</p>
                                <input type="hidden" class="email_list" t-att-value="email"/>
                                <input class="input_box" id="email_id" required="required" type="text" name="email"
                                       pattern="[^ @]*@[^ @]*" t-att-value="email_d" placeholder=""
                                       style="width:90% !important" tabindex="1"/>
                                  <span id="email-already" class="d-none" style="color:green">Email Valid</span>
                                 <span id="email-warning-already-exist" class="d-none" style="color:red">Email Already Exists</span>

                            </div>
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                <p class="mt-3">First Name</p>
                                <input class="input_box" id="first_name" required="required" type="text"
                                       name="first_name" t-att-value="first_name" placeholder=""
                                       style="width:90% !important" tabindex="4"/>
                            </div>
                            <div class="col-xl-4 col-lg-5 col-md-5 col-sm-12 col-xs-12">
                                <p class="mt-3">Address Line 1</p>
                                <input class="input_box" id="street_d_1" required="required" type="text"
                                       name="street_d_1" placeholder="" style="width:90% !important" tabindex="9"/>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-xl-4 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                <p class="mt-3">Password</p>
                                <input class="input_box" id="password_id" required="required" type="password"
                                       name="password" t-att-value="password_d" placeholder=""
                                       style="width:90% !important" tabindex="2"/>
                                <p id="passwordError"/>

                            </div>
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                <p class="mt-3">Last Name</p>
                                <input class="input_box" id="first_name_d" required="required" type="text"
                                       name="first_name_d" t-att-value="first_name_d" placeholder=""
                                       style="width:90% !important" tabindex="4"/>
                            </div>
                            <div class="col-xl-4 col-lg-5 col-md-5 col-sm-12 col-xs-12">
                                <p class="mt-3">Address Line 2</p>
                                <input class="input_box" id="street_d_1" required="required" type="text"
                                       name="street_d_1" placeholder="" tabindex="9" style="width:90% !important"/>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-xl-4 col-lg-5 col-md-5 col-sm-12 col-xs-12">
                                <p class="mt-3">Confirm Password</p>
                                <input class="input_box" id="confirmPassword" required="required" type="password"
                                       name="confirm password" placeholder="" tabindex="3" style="width:90% !important"/>
                              <p id="confirmPasswordMessage"/>

                            </div>
                            <div class="col-xl-3 col-lg-5 col-md-5 col-sm-12 col-xs-12">
                                <p class="mt-3">Company Name</p>
                                <input class="input_box" id="company_name_d" required="required" type="text"
                                       name="company_name_d" placeholder="" tabindex="6" style="width:90% !important"/>
                            </div>

                            <div class="col-xl-3 col-lg-5 col-md-5 col-sm-12 col-xs-12">
                                <p class="mt-3">City</p>
                                <input class="input_box" id="city_d" required="required" type="text" name="city_d"
                                       placeholder="" tabindex="11" style="width:90% !important"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-3 col-lg-5 col-md-5 col-sm-12 col-xs-12">
                               <span class="p_popup" id="passwd_min_requirement" style="color:grey">Password must be at least 8 characters long and contain both letters, numbers and symbol </span>
                            </div>
                            <div class="col-1">
                            </div>

                            <div class="col-xl-3 col-lg-5 col-md-5 col-sm-12 col-xs-12">
                                <p class="">Phone Number</p>
                                <input class="input_box" id="" required="required" type="text" name="Phone"
                                       pattern="[1-9]{1}[0-9]{9}" placeholder="" tabindex="6" style="width:90% !important"/>
                            </div>
                                <div class="col-xl-3 col-lg-5 col-md-5 col-sm-12 col-xs-12">
                                    <p class="">Country</p>
                                    <div id="country_d_id">
                                        <select  class="input_box" name="country" required="True" id="country_id"
                                                tabindex="13" style="width: 90% ; background-color:white;">
                                            <option value="">Select Country...</option>
                                            <t t-foreach="country" t-as="i">
                                                <option t-att-value="i.id">
                                                    <t t-esc="i.name"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                    <div id="main-category-warning-country"
                                         class="row text-danger d-none rdc-warning custom-margin-left-10 cls-font">
                                        Please Select the Country!
                                    </div>
                                </div>
                        </div>
                        <div class="row">
                            <div class="col-3"></div>
                            <div class="col-1"></div>
                            <div class="col-xl-3 col-lg-5 col-md-5 col-sm-12 col-xs-12">
                                <p class="mt-3">State/Province</p>
                                <div id="state_d_id">
                                    <select class="input_box" name="state" required="True" id="state_id" tabindex="13"
                                            style="width: 90% ; background-color:white;">
                                        <option value="">Select State...</option>
                                        <t t-foreach="states" t-as="i">
                                            <option t-att-value="i.id" t-att-country="i.country_id.id">
                                                <t t-esc="i.name"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>

                            </div>

                            <div class="col-xl-3 col-lg-5 col-md-5 col-sm-12 col-xs-12">
                                <p class="mt-3">ZIP/Postal Code</p>
                                <input class="input_box" id="zip_d" type="text" name="zip_d" placeholder=""
                                       tabindex="14" style="width:90% !important"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col mt-5" style="margin-left :60rem;">
                                <button type="submit" id="create_user_direct_btn" class="btn text-white p-2" tabindex="15"
                                        style="background-color: #b6c936; width: 70%;">
                                    Register
                                </button>
                            </div>
                        </div>

                    </div>
                   </form>
                </section>
            </div>

        </t>
    </template>


</odoo>
